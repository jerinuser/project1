import random

def guess(x):
    random_numbers=random.randint(1,x)
    guess = 0
    while guess != random_numbers:
        guess = int(input(f"guess the number between 1 and {x}: "))

        if guess < random_numbers:
            print('sorry your guess is too low')
        elif guess > random_numbers:
            print("sorry your guess is too high")

    print(f" good you have guessed correct number:{random_numbers}")
guess(10)
import random

def guess(x):
    random_number = random.randint(1, x)
    guess = 0
    while guess != random_number:
        guess = int(input(f"Guess the number between 1 and {x}: "))

        if guess < random_number:
            print("Sorry, your guess is too low.")
        elif guess > random_number:
            print("Sorry, your guess is too high.")

    print(f"Good job! You have guessed the correct number: {random_number}")

guess(10)
